{
  "rewrites": [
    { "source": "/recipe-app", "destination": "/public/recipe-app/index.html" },
    { "source": "/recipe-app/(.*)", "destination": "/public/recipe-app/$1" },
    { "source": "/history-app", "destination": "/public/history-app/index.html" },  
    { "source": "/history-app/(.*)", "destination": "/public/history-app/$1" },
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ]
}